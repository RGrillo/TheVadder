@model IEnumerable<Vadder.Models.KioskDepartment>

@{
    ViewBag.Title = "All Departments";
}

<h3>All Departments</h3>

<p>
    @Html.ActionLink("New Department", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table" id="kdTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KdName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KdName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.KdId }, new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink("Details", "Details", new { id = item.KdId }, new { @class = "btn btn-info btn-xs" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.KdId }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>

@section scripts
{
    <script>

        $(document).ready(function () {
            $('#kdTable').DataTable();
        });
    </script>

}
